<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Label.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Height" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="OnCheck">
                            <DoubleAnimation
                                Storyboard.TargetName="slider"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                                Duration="0:0:0.2"
                                To="20" />
                            <DoubleAnimation 
                                Storyboard.TargetName="bar"
                                Storyboard.TargetProperty="(Border.Opacity)"
                                FillBehavior="HoldEnd"
                                Duration="0:0:0.2"
                                To="1" />
                        </Storyboard>
                        <Storyboard x:Key="OnUncheck">
                            <DoubleAnimation
                                Storyboard.TargetName="slider"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                                Duration="0:0:0.2"
                                To="4" />
                            <DoubleAnimation
                                Storyboard.TargetName="bar"
                                Storyboard.TargetProperty="(Border.Opacity)"
                                FillBehavior="HoldEnd"
                                Duration="0:0:0.2"
                                To="0" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <StackPanel x:Name="stackPanel"
                                Height="{TemplateBinding Height}"
                                Orientation="Horizontal">
                        <Grid FlowDirection="LeftToRight">
                            <Border 
                                Margin="2,0"
                                Width="32"
                                Height="16"
                                CornerRadius="8"
                                Background="{DynamicResource ControlBrush}" />
                            <Border
                                x:Name="bar"
                                Margin="2,0"
                                Width="32"
                                Height="16"
                                CornerRadius="8"
                                Opacity="0"
                                Background="{DynamicResource HighlightBrush}">
                            </Border>
                            <Border
                                x:Name="slider"
                                HorizontalAlignment="Left"
                                Width="12"
                                Height="12"
                                CornerRadius="6"
                                RenderTransformOrigin="0.5,0.5"
                                Background="{DynamicResource TextBrush}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform X="4" Y="0" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <!--<TextBlock Style="{StaticResource DefaultLabelStyle}">
                        </TextBlock>-->
                        <ContentPresenter
                            Margin="5,0"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            Content="{TemplateBinding Content}"
                            ContentStringFormat="{TemplateBinding ContentStringFormat}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            RecognizesAccessKey="True"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource OnUncheck}" />
                            </Trigger.ExitActions>
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource OnCheck}" />
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>