<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="ActiveWindowBorder">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Panel.ZIndex" Value="1000"/>
        <Setter Property="BorderBrush" Value="{StaticResource ActiveWindowBorderBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>
    <Style TargetType="Border" BasedOn="{StaticResource ActiveWindowBorder}" x:Key="InactiveWindowBorder">
        <Setter Property="BorderBrush" Value="{StaticResource InactiveWindowBorderBrush}"/>
    </Style>
    
</ResourceDictionary>